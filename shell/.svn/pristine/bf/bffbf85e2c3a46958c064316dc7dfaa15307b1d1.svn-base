<strong>int</strong>
<font color="#2040a0">submit_work</font><font color="4444FF">(</font><strong>void</strong> <font color="4444FF">(</font><font color="4444FF">*</font><font color="#2040a0">func</font><font color="4444FF">)</font><font color="4444FF">(</font><strong>void</strong> <font color="4444FF">*</font><font color="#2040a0">data</font><font color="4444FF">)</font>, <strong>void</strong> <font color="4444FF">*</font><font color="#2040a0">data</font><font color="4444FF">)</font>
<font color="4444FF"><strong>{</strong></font>
    <strong>struct</strong> <font color="#2040a0">_mydrv_work</font> <font color="4444FF">*</font><font color="#2040a0">mydrv_work</font><font color="4444FF">;</font>

    <font color="#444444">/* Allocate the work structure */</font>
    <font color="#2040a0">mydrv_work</font> <font color="4444FF">=</font> <font color="#2040a0">kmalloc</font><font color="4444FF">(</font><strong>sizeof</strong><font color="4444FF">(</font><strong>struct</strong> <font color="#2040a0">_mydrv_work</font><font color="4444FF">)</font>, <font color="#2040a0">GFP_ATOMIC</font><font color="4444FF">)</font><font color="4444FF">;</font>
    <strong>if</strong> <font color="4444FF">(</font><font color="4444FF">!</font><font color="#2040a0">mydrv_work</font><font color="4444FF">)</font> <strong>return</strong> <font color="4444FF">-</font><font color="#FF0000">1</font><font color="4444FF">;</font>

    <font color="#444444">/* Populate the work structure */</font>
    <font color="#2040a0">mydrv_work</font><font color="4444FF">-</font><font color="4444FF">&gt;</font><font color="#2040a0">worker_func</font> <font color="4444FF">=</font> <font color="#2040a0">func</font><font color="4444FF">;</font> <font color="#444444">/* Work function */</font>
    <font color="#2040a0">mydrv_work</font><font color="4444FF">-</font><font color="4444FF">&gt;</font><font color="#2040a0">worker_data</font> <font color="4444FF">=</font> <font color="#2040a0">data</font><font color="4444FF">;</font> <font color="#444444">/* Argument to pass */</font>
    <font color="#2040a0">spin_lock</font><font color="4444FF">(</font><font color="4444FF">&amp;</font><font color="#2040a0">mydrv_wq</font>.<font color="#2040a0">lock</font><font color="4444FF">)</font><font color="4444FF">;</font> <font color="#444444">/* Protect the list */</font>

    <font color="#444444">/* Add your work to the tail of the list */</font>
    <font color="#2040a0">list_add_tail</font><font color="4444FF">(</font><font color="4444FF">&amp;</font><font color="#2040a0">mydrv_work</font><font color="4444FF">-</font><font color="4444FF">&gt;</font><font color="#2040a0">mydrv_workitem</font>,
                  <font color="4444FF">&amp;</font><font color="#2040a0">mydrv_wq</font>.<font color="#2040a0">mydrv_worklist</font><font color="4444FF">)</font><font color="4444FF">;</font>

    <font color="#444444">/* Wake up the worker thread */</font>
    <font color="#2040a0">wake_up</font><font color="4444FF">(</font><font color="4444FF">&amp;</font><font color="#2040a0">mydrv_wq</font>.<font color="#2040a0">todo</font><font color="4444FF">)</font><font color="4444FF">;</font>
    <font color="#2040a0">spin_unlock</font><font color="4444FF">(</font><font color="4444FF">&amp;</font><font color="#2040a0">mydrv_wq</font>.<font color="#2040a0">lock</font><font color="4444FF">)</font><font color="4444FF">;</font>

    <strong>return</strong> <font color="#FF0000">0</font><font color="4444FF">;</font>
<font color="4444FF"><strong>}</strong></font>

</pre>
