<font color="0000ff"><strong>#include <font color="#008000">&lt;stdio.h&gt;</font></strong></font>
<font color="0000ff"><strong>#include <font color="#008000">&lt;fcntl.h&gt;</font></strong></font>
<font color="0000ff"><strong>#include <font color="#008000">&lt;linux/fb.h&gt;</font></strong></font>
<font color="0000ff"><strong>#include <font color="#008000">&lt;sys/mman.h&gt;</font></strong></font>
<font color="0000ff"><strong>#include <font color="#008000">&lt;stdlib.h&gt;</font></strong></font>

<strong>struct</strong> <font color="#2040a0">fb_var_screeninfo</font> <font color="#2040a0">vinfo</font><font color="4444FF">;</font>

<strong>int</strong>
<font color="#2040a0">main</font><font color="4444FF">(</font><strong>int</strong> <font color="#2040a0">argc</font>, <strong>char</strong> <font color="4444FF">*</font><font color="#2040a0">argv</font><font color="4444FF">[</font><font color="4444FF">]</font><font color="4444FF">)</font>
<font color="4444FF"><strong>{</strong></font>
    <strong>int</strong> <font color="#2040a0">fbfd</font>, <font color="#2040a0">fbsize</font>, <font color="#2040a0">i</font><font color="4444FF">;</font>
    <strong>unsigned</strong> <strong>char</strong> <font color="4444FF">*</font><font color="#2040a0">fbbuf</font><font color="4444FF">;</font>

    <font color="#444444">/* Open video memory */</font>
    <strong>if</strong> <font color="4444FF">(</font><font color="4444FF">(</font><font color="#2040a0">fbfd</font> <font color="4444FF">=</font> <font color="#2040a0">open</font><font color="4444FF">(</font><font color="#008000">&quot;/dev/fb0&quot;</font>, <font color="#2040a0">O_RDWR</font><font color="4444FF">)</font><font color="4444FF">)</font> <font color="4444FF">&lt;</font> <font color="#FF0000">0</font><font color="4444FF">)</font> <font color="4444FF"><strong>{</strong></font>
        <font color="#2040a0">exit</font><font color="4444FF">(</font><font color="#FF0000">1</font><font color="4444FF">)</font><font color="4444FF">;</font>
    <font color="4444FF"><strong>}</strong></font>

    <font color="#444444">/* Get variable display parameters */</font>
    <strong>if</strong> <font color="4444FF">(</font><font color="#2040a0">ioctl</font><font color="4444FF">(</font><font color="#2040a0">fbfd</font>, <font color="#2040a0">FBIOGET_VSCREENINFO</font>, <font color="4444FF">&amp;</font><font color="#2040a0">vinfo</font><font color="4444FF">)</font><font color="4444FF">)</font> <font color="4444FF"><strong>{</strong></font>
        <font color="#2040a0">printf</font><font color="4444FF">(</font><font color="#008000">&quot;Bad vscreeninfo ioctl<font color="#77dd77">\n</font>&quot;</font><font color="4444FF">)</font><font color="4444FF">;</font>
        <font color="#2040a0">exit</font><font color="4444FF">(</font><font color="#FF0000">2</font><font color="4444FF">)</font><font color="4444FF">;</font>
    <font color="4444FF"><strong>}</strong></font>

    <font color="#444444">/* Size of frame buffer =
       (X-resolution * Y-resolution * bytes per pixel) */</font>
    <font color="#2040a0">fbsize</font> <font color="4444FF">=</font> <font color="#2040a0">vinfo</font>.<font color="#2040a0">xres</font><font color="4444FF">*</font><font color="#2040a0">vinfo</font>.<font color="#2040a0">yres</font><font color="4444FF">*</font><font color="4444FF">(</font><font color="#2040a0">vinfo</font>.<font color="#2040a0">bits_per_pixel</font>/<font color="#FF0000">8</font><font color="4444FF">)</font><font color="4444FF">;</font>

    <font color="#444444">/* Map video memory */</font>
    <strong>if</strong> <font color="4444FF">(</font><font color="4444FF">(</font><font color="#2040a0">fbbuf</font> <font color="4444FF">=</font> <font color="#2040a0">mmap</font><font color="4444FF">(</font><font color="#FF0000">0</font>, <font color="#2040a0">fbsize</font>, <font color="#2040a0">PROT_READ</font><font color="4444FF">|</font><font color="#2040a0">PROT_WRITE</font>,
                      <font color="#2040a0">MAP_SHARED</font>, <font color="#2040a0">fbfd</font>, <font color="#FF0000">0</font><font color="4444FF">)</font><font color="4444FF">)</font> <font color="4444FF">=</font><font color="4444FF">=</font> <font color="4444FF">(</font><strong>void</strong> <font color="4444FF">*</font><font color="4444FF">)</font> <font color="4444FF">-</font><font color="#FF0000">1</font><font color="4444FF">)</font><font color="4444FF"><strong>{</strong></font>
        <font color="#2040a0">exit</font><font color="4444FF">(</font><font color="#FF0000">3</font><font color="4444FF">)</font><font color="4444FF">;</font>
    <font color="4444FF"><strong>}</strong></font>

    <font color="#444444">/* Clear the screen */</font>
    <strong>for</strong> <font color="4444FF">(</font><font color="#2040a0">i</font><font color="4444FF">=</font><font color="#FF0000">0</font><font color="4444FF">;</font> <font color="#2040a0">i</font><font color="4444FF">&lt;</font><font color="#2040a0">fbsize</font><font color="4444FF">;</font> <font color="#2040a0">i</font><font color="4444FF">+</font><font color="4444FF">+</font><font color="4444FF">)</font> <font color="4444FF"><strong>{</strong></font>
        <font color="4444FF">*</font><font color="4444FF">(</font><font color="#2040a0">fbbuf</font><font color="4444FF">+</font><font color="#2040a0">i</font><font color="4444FF">)</font> <font color="4444FF">=</font> <font color="#FF0000">0x0</font><font color="4444FF">;</font>
    <font color="4444FF"><strong>}</strong></font>
    <font color="#2040a0">munmap</font><font color="4444FF">(</font><font color="#2040a0">fbbuf</font>, <font color="#2040a0">fbsize</font><font color="4444FF">)</font><font color="4444FF">;</font>

    <font color="#2040a0">close</font><font color="4444FF">(</font><font color="#2040a0">fbfd</font><font color="4444FF">)</font><font color="4444FF">;</font>
<font color="4444FF"><strong>}</strong></font>

</pre>
