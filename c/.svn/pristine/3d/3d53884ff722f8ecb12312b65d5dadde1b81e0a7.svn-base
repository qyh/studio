#include "OOStd.h"

void test2(){
	Exception *e=GET_EXCEPTION(1);
	TRY
		THROW(e);
	END_TRY
}
void test(){
    Exception e={"exception test2 has been changed!"};
    SET_EXCEPTION(1,&e);
    TRY
        test2();
    CATCH(&e)
        fprintf(stderr,"!!! exception : %s\n",e.reason);
    END_TRY
}
int main (int argc, char *argv[]){
    Exception excp[32]={
    		{"test1"},
    		{"test2"},
    		{"test3"},
    };

    SET_EXCEPTIONS(&excp,32);
    TRY
        test();
    FINALLY
    	fprintf(stderr,"final process\n");
    END_TRY

    return(0);
}

